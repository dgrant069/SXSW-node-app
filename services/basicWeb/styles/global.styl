html
  background #fff
  font-family verdana, sans-serif
  font-size 16px

body
  background #fff
  width 600px
  margin 10px auto
  border 1px solid #eee
  border-radius 2px
  box-shadow 0px 0px 35px -15px #555

h1
  font-size 150%
  padding 0
  margin 0

#header
  background #333
  position relative

  h1 a
    color #fff
    text-decoration none

#auth
  position absolute
  top 10px
  right 15px

  input
    display inline-block
    margin-left 5px
    padding 5px
    width 8em
    border-radius 3px

    &[type="submit"]
      background #777
      color #eee
      width auto
      text-align center
      border 1px solid #eee
      cursor pointer

#header, #content
  padding 10px 15px
